<div class = "container d-flex justify-content-center align-items-center shadow p-3 mb-5 bg-body-tertiary rounded show_container flex-column", style = "margin-top: 120px;">
  <p class="h1 text-center mb-5">Product Details</p>

  <%= image_tag(@product.images.first) %>

  <div class = "mb-5">
    <span class = "text-center fw-medium fs-4">Product Name : </span> 
    <span class = "fw-light fs-5"><%= @product.name%></span>
  </div>
  <div class = "mb-5">
    <span class = "text-center fw-medium fs-4">Description : </span> 
    <span class = "fw-light fs-5"><%= @product.description%></span>
  </div>

  <div class = "mt-3 d-flex justify-content-center ms-2 ">
    <%= link_to "Edit", edit_product_path(@product), class: "btn btn-secondary me-5"%>
    <%= link_to "Back", roles_path , class: "btn btn-danger"%>
  </div>
</div>
 