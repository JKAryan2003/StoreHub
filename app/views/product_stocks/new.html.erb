<div class = "container d-flex justify-content-center align-items-center", style = "margin-top: 150px; " >
	<div class = "row d-flex justify-content-center align-items-center border rounder-5 p-5 bg-white shadow  box-area inside_container">
		<p class="h2 text-center">Stock Transaction</p>
		<%= form_for @quantity do |f| %>
			<div class = "form-group m-3">
				<%= f.label :quantity %>
				<%= f.text_field :qunatity ,class: "form-control my-3" %>
			</div>

      <div class = "form-group m-3 d-flex justify-content-center justify-content-between">
        <div>
          <%= f.label :transaction_type, 'In' %>
          <%= f.radio_button :transaction_type,true %>
        </div>
        <div>
          <%= f.label :transaction_type, 'Out' %>
          <%= f.radio_button :transaction_type,false %>
        </div>
      </div>

			<div class = "ms-5 d-flex justify-content-center">
				<%= f.submit 'Update Stocks', class: 'btn btn-primary mt-3 me-5 ' %>
			</div>
		<% end %>

	</div>

</div>