<div class = "d-flex justify-content-center align-items-center">
  <div class = "container d-inline-flex justify-content-center align-items-center flex-column", style = "margin-top: 80px;">
    <p class="h2 text-center mb-3">Hey <%= @current_user.first_name %></p>
    <p class="h2 text-center mb-3">Your order has been placed. Below is the order details</p>
    <div class = "table_div">
      <table class="table table-hover text-center">
        <thead class = "table-secondary">
          <tr>
            <th class = "p-3" >Product Image</th>
            <th class = "p-3" >Product Name</th>
            <th class = "p-3" >Quantity</th>
            <th class = "p-3" >Price</th>
            <th class = "p-3" >Total Price</th>
          </tr>
        </thead>
        <tbody class = "table-light text-center" >
          <% @current_order.order_items.each do |order_item|%>
              <tr>
                <td><%= image_tag(order_item.product.images.first, style: "width: 15rem; height: 15rem; padding-left: ;") %></td>
                <td><%= order_item.product.name %></td>
                <td><%= order_item.quantity %></td>
                <td><%= order_item.product.price %></td>
                <td><%= order_item.quantity * order_item.product.price %></td>
              </tr>
          <% end%>
        </tbody>
      </table>
      <p class="h2 text-center mb-3">Click on link below to confirm your order</p>
    </div>
  </div>
</div>